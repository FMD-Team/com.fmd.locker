<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/Panel" >


<RelativeLayout
    android:id="@+id/P"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/top_clock_and_date" >
	
<RelativeLayout
    android:id="@+id/WidFMD"
	android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
	
    <TextView
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"         
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:textSize="@dimen/txt_size_clock" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Time"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="@dimen/txt_size_date" />

    <TextView
        android:id="@+id/Percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:layout_below="@+id/Date"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="@dimen/txt_size_date" />
</RelativeLayout>
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_icons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_icons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="@dimen/size_bottom_icon"
            android:layout_height="@dimen/size_bottom_icon"
            android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/ic_lock"
            android:layout_width="@dimen/size_bottom_icon"
            android:layout_height="@dimen/size_bottom_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/ic_camera"
            android:layout_width="@dimen/size_bottom_icon"
            android:layout_height="@dimen/size_bottom_icon"
            android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera" />
			
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_icons"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <com.fmd.locker.sim2name.sim1
            android:id="@+id/sim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:gravity="right"
            android:textStyle="italic"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="17sp" />
        <com.fmd.locker.sim2name.sim2
            android:id="@+id/sim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="#ffffffff"
            android:singleLine="true"
            android:gravity="left"
            android:textStyle="italic"
            android:paddingLeft="2dp"
            android:paddingRight="3dp"
            android:textSize="17sp" />
    </LinearLayout>
</RelativeLayout>